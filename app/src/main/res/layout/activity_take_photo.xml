<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cphbusiness.luke.androidschoolproject.TakePhoto">

    <Button
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:text="@string/take_a_photo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/receivedUserName"
        android:layout_toEndOf="@+id/counter_description"
        android:layout_marginBottom="66dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/tvDescribeActionTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" take a photo for your report."
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:id="@+id/receivedUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="user name"
        android:layout_alignTop="@+id/tvDescribeActionTakePhoto"
        android:layout_toStartOf="@+id/tvDescribeActionTakePhoto" />

    <TextView
        android:id="@+id/counter_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/counter_description"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
